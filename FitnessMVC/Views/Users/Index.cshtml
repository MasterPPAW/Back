@model IEnumerable<LibrarieModele.DTOs.UserDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.Password)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.RegistrationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FitnessLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrialExpiration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewProperty1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewProperty2)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            @* <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FitnessLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrialExpiration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewProperty1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewProperty2)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UserId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UserId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
